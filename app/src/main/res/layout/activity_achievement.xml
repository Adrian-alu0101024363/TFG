<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/achievement_page_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Achievement">


    <ImageView
        android:id="@+id/imageViewPrincipal"
        android:layout_width="390dp"
        android:layout_height="520dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgHorizontalScrollView"
        app:layout_constraintStart_toStartOf="@+id/imgHorizontalScrollView"
        app:layout_constraintTop_toTopOf="@+id/imgHorizontalScrollView"
        app:srcCompat="@drawable/view" />

    <HorizontalScrollView
        android:id="@+id/imgHorizontalScrollView"
        android:layout_width="409dp"
        android:layout_height="120dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="9dp"
        android:contentDescription="@string/image_per_level"
        app:layout_constraintBottom_toTopOf="@+id/imageViewPrincipal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linear_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginEnd="20dp"
                android:tag="img1"
                app:srcCompat="@drawable/castle" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginEnd="20dp"
                android:tag="img2"
                app:srcCompat="@drawable/view" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginEnd="20dp"
                android:tag="img3"
                app:srcCompat="@drawable/rasha" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginEnd="20dp"
                android:tag="img4"
                app:srcCompat="@drawable/street" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginEnd="20dp"
                android:tag="img5"
                app:srcCompat="@drawable/temple" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginEnd="20dp"
                android:tag="img6"
                app:srcCompat="@drawable/grey" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>